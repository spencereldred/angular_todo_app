<div ng-controller="TodoCtrl">
  <div class="container">
    <br><br>
    <div class="row">
      <div class="col-sm-offset-2 col-sm-10">
        <todotitle id="my-title"></todotitle>
      </div>
    </div>
    <!-- <div class="row">
      <div class="col-sm-offset-2 col-sm-10">
        <additem id="add-item"></additem>
      </div>
    </div> -->
    <div class="row">
      <div class="col-sm-offset-2 col-sm-10">
        <form ng-submit="addTodo()">
          <input type="submit" value="Add Item" class="btn btn-primary" style="font-size: 30px;">
          <p></p>
          <input type="text" id="input-item" style="font-size: 20px;"placeholder="  < Add Item >" ng-model="newTodo.description" >
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-offset-2 col-sm-10"><undonelist id="item-list"></undonelist></div>
    </div>
    <ul>
      <div ng-repeat="todo in todos | filter: {done: false} | orderBy:'description'">
        <div class="row">
          <li class="col-sm-offset-2 col-sm-10 item">
            <done-button></done-button>&nbsp;&nbsp;
              <span id="todo-item">{{todo.description}}</span>
          </li>
        </div>
      </div>
    </ul>
    <div class="row">
      <div class="col-sm-offset-2 col-sm-10">
        <donelist id="future-items"></donelist>
      </div>
    </div>
    <ul>
      <div ng-repeat="todo in todos | filter: {done: true} | orderBy:'description'">
        <div class="row">
          <li class="col-sm-offset-2 col-sm-10 item">
            <buy-button></buy-button>&nbsp;&nbsp;
              <span id="done-todo">{{todo.description}}</span><a id="delete" href="#" ng-click="delete_todo()"> Delete</a>
          </li>
        </div>
      </div>
    </ul>
  </div>
</div>